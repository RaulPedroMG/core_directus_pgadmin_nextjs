# ===========================================
# üöÄ SHIPFREE - ENVIRONMENT EXAMPLE
# ===========================================
# This is an example environment file that shows all available settings
# Copy to .env.dev or .env.prod and customize for your environment

# ===========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ===========================================
# PostgreSQL configuration
POSTGRES_USER=shipfree_user
POSTGRES_PASSWORD=example_password_change_me
POSTGRES_DB=shipfree_db

# PostgreSQL connection string
DATABASE_URL=postgresql://shipfree_user:example_password_change_me@localhost:5432/shipfree_db

# pgAdmin configuration
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin_example_password

# ===========================================
# üö¢ PORT CONFIGURATION
# ===========================================
# Development ports
APP_PORT_DEV=3070
POSTGRES_PORT_DEV=5470
DIRECTUS_PORT_DEV=8070
PGADMIN_PORT_DEV=5070
PORTAINER_PORT_DEV=9070

# Production ports
APP_PORT_PROD=3000
POSTGRES_PORT_PROD=5432
PORTAINER_PORT_PROD=9000

# Internal container ports (usually don't need to change)
APP_INTERNAL_PORT=3000
POSTGRES_INTERNAL_PORT=5432
DIRECTUS_INTERNAL_PORT=8055
PGADMIN_INTERNAL_PORT=80
PORTAINER_INTERNAL_PORT=9000

# ===========================================
# üéõÔ∏è DIRECTUS CMS CONFIGURATION
# ===========================================
# Public URL for browser access to Directus
NEXT_PUBLIC_DIRECTUS_URL=http://localhost:8070

# Internal URL for server-side communication with Directus
DIRECTUS_INTERNAL_URL=http://directus:8055

# Directus database settings
DIRECTUS_DB_HOST=postgres
DIRECTUS_DB_PORT=5432
DIRECTUS_DB_DATABASE=directus_db
DIRECTUS_DB_USER=shipfree_user
DIRECTUS_DB_PASSWORD=example_password_change_me

# Directus application settings
DIRECTUS_KEY=example-key-255d861b-5ea1-5996-9aa3-922530ec40b1
DIRECTUS_SECRET=example-secret-6116487b-cda1-52c2-b5b5-c8022c45e263
DIRECTUS_ADMIN_EMAIL=admin@example.com
DIRECTUS_ADMIN_PASSWORD=Admin_Example_Password123
DIRECTUS_PUBLIC_URL=http://localhost:8070

# ===========================================
# üí≥ PAYMENT PROVIDERS (Optional)
# ===========================================
# Stripe configuration (optional)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_example_publishable_key
STRIPE_SECRET_KEY=sk_test_example_secret_key
STRIPE_WEBHOOK_SECRET=whsec_example_webhook_secret

# LemonSqueezy configuration (optional)
LEMON_SQUEEZY_API_KEY=example_lemon_squeezy_api_key
LEMON_SQUEEZY_STORE_ID=example_store_id
LEMON_SQUEEZY_WEBHOOK_SECRET=example_webhook_secret

# ===========================================
# üìß EMAIL CONFIGURATION (Optional)
# ===========================================
# Mailgun configuration (optional)
MAILGUN_API_KEY=key-example_mailgun_api_key
MAILGUN_DOMAIN=example.com
MAILGUN_FROM_EMAIL=noreply@example.com
MAILGUN_SIGNING_KEY=example_mailgun_signing_key

# ===========================================
# üõ†Ô∏è DEVELOPMENT CONFIGURATION
# ===========================================
# Node environment (development or production)
NODE_ENV=development

# Disable Husky for Docker development
HUSKY=0

# ===========================================
# üîí SECURITY CONFIGURATION (Production)
# ===========================================
# SSL/TLS Configuration
SSL_ENABLED=false
FORCE_HTTPS=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3070

# Session Security
SESSION_SECRET=example_session_secret
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# ===========================================
# üìä MONITORING & LOGGING (Production)
# ===========================================
# Application monitoring
LOG_LEVEL=info
SENTRY_DSN=https://example@sentry.io/123456
